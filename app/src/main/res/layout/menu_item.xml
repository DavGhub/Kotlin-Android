<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/meal_image"
            android:layout_width="@dimen/meal_image_size"
            android:layout_height="@dimen/meal_image_size"
            android:src="@drawable/ic_fastfood"
            android:layout_marginTop="@dimen/vertical_margin"
            android:layout_marginStart="@dimen/horizontal_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/meal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Name"
            android:textSize="@dimen/contact_name_size"
            android:textColor="@color/text_color"
            android:layout_marginStart="@dimen/horizontal_margin"
            app:layout_constraintTop_toTopOf="@id/meal_image"
            app:layout_constraintStart_toEndOf="@id/meal_image"/>

        <ImageView
            android:id="@+id/favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:src="@drawable/favorite_border"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:layout_constraintTop_toTopOf="@id/meal_name"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/basket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:layout_marginTop="@dimen/vertical_margin"
            android:src="@drawable/add_shopping_cart"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:layout_constraintTop_toBottomOf="@id/favorite"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="14 floor restaurant"
            android:textSize="18sp"
            android:textColor="@color/text_color"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/meal_name"
            app:layout_constraintStart_toStartOf="@id/meal_name"/>

        <ImageView
            android:id="@+id/rate_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rate_star"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/restaurant_name"
            app:layout_constraintStart_toStartOf="@id/restaurant_name"
            />

        <TextView
            android:id="@+id/meal_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="4.9"
            android:textSize="20sp"
            android:textColor="@color/text_color"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/rate_star"
            app:layout_constraintBottom_toBottomOf="@id/rate_star"
            app:layout_constraintStart_toEndOf="@id/rate_star"/>

        <TextView
            android:id="@+id/meal_rating_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(180 rating)"
            android:textSize="20sp"
            android:textColor="@color/text_color"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/rate_star"
            app:layout_constraintBottom_toBottomOf="@id/rate_star"
            app:layout_constraintStart_toEndOf="@id/meal_rating"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
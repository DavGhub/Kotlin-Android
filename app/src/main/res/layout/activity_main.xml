<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".intents.MainActivity">

        <EditText
            android:id="@+id/website_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/url"
            android:layout_marginEnd="@dimen/end_margin"
            android:layout_marginStart="@dimen/start_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/open_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/open_website"
            android:onClick="openWebsite"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginStart="@dimen/start_margin"
            app:layout_constraintTop_toBottomOf="@id/website_edittext"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/location_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/location"
            android:layout_marginEnd="@dimen/end_margin"
            android:layout_marginStart="@dimen/start_margin"
            app:layout_constraintTop_toBottomOf="@id/open_website"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/open_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/open_location"
            android:onClick="openLocation"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginStart="@dimen/start_margin"
            app:layout_constraintTop_toBottomOf="@id/location_edittext"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/share_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pluto is not a planet"
            android:layout_marginEnd="@dimen/end_margin"
            android:layout_marginStart="@dimen/start_margin"
            app:layout_constraintTop_toBottomOf="@id/open_location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/share_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_this_text"
            android:onClick="shareText"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginStart="@dimen/start_margin"
            app:layout_constraintTop_toBottomOf="@id/share_edittext"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>